<!-- Classie --><!-- for toggle left push menu script -->
<script>
    var menuLeft = document.getElementById('cbp-spmenu-s1'),
        showLeftPush = document.getElementById('showLeftPush'),
        body = document.body;

    showLeftPush.onclick = function () {
        classie.toggle(this, 'active');
        classie.toggle(body, 'cbp-spmenu-push-toright');
        classie.toggle(menuLeft, 'cbp-spmenu-open');
        disableOther('showLeftPush');
    };

    function disableOther(button) {
        if (button !== 'showLeftPush') {
            classie.toggle(showLeftPush, 'disabled');
        }
    }
</script>



<div class="main-content">
    <div class="main-page">
        @model WorldSportsA.Models.Team
        @using WorldSportsA.Models;


        @{
            ViewBag.Title = "Index";
            Layout = "~/Views/_admin.cshtml";
        }

        <div class="panel-body widget-shadow">

            <h2 class="title1">League Teams</h2>

            <div class="tables">

                <input class="btn btn-primary" type="button" value="Add Team" onclick="location.href='/teams/add';" /> <input class="btn btn-primary" type="button" value="Add Fixture" onclick="location.href='/fixtures/add';" />
                @{

                            int count = 0;

                            if (ViewData["MyTeams"] != null)
                            {


                        <table class="table table-hover">
                            <thead>
                                <tr class="success">
                                    <th>No.</th>

                                    <th>Name</th>
                                    <th>Coach</th>
                                    <th>Aministrator</th>
                                    <th>Home Ground</th>
                                    <th></th>
                                    <th></th>
                                    <th></th>

                                </tr>
                            </thead>

                            @foreach (Team t in (IEnumerable<Team>)ViewData["MyTeams"])
                            {
                                count++;

                                <tbody>
                                    <tr>
                                        <th scope="row">@count</th>

                                        
                                        <td><a href="/Players/View/@t.Id">@t.Name</a></td>
                                        <td>@t.Coach</td>
                                        <td>@t.Administrator</td>
                                        <td>@t.VenueName</td>
                                        <td><a class="btn btn-sm btn-primary" href="teams/Edit">Edit</a></td>
                                        <td><a class="btn btn-sm btn-info" href="teams/Details">Details</a></td>
                                        <td><a class="btn btn-sm btn-danger" href="teams/Delete">Delete</a></td>
                                    </tr>
                                </tbody>
                            }
                        </table>
                    }

                    else
                    {
                        <p>No teams on this League...</p>
                    }
                }

            </div>
        </div>

    </div>
    <div class="clearfix"> </div>
</div>
